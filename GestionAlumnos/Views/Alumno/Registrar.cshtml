@model GestionAlumnos.Models.AlumnoModel

@{
    ViewBag.Title = "Registrar";
}

<h2>Registro de Alumno</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <p>@ViewBag.Mensaje</p>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.rut, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @* @Html.EditorFor(model => model.rut, new { htmlAttributes = new { @class = "form-control" } }) *@
            <input type="text" min="1" max="10" name="rut" id="rut" value="@Model.rut" class="form-control" required/>
            @Html.ValidationMessageFor(model => model.rut, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @* Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } }) *@
            <input name="nombre" id="nombre" value="@Model.nombre" class="form-control" required/>
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
         @*   @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control" } }) *@
            <input type="text" name="apellidos" id="apellidos" value="@Model.apellidos" class="form-control" required/>
            @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.edad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
          @*  @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control" } }) *@
            <input type="number" min="1" max="109"  name="edad" id="edad" value="@Model.edad" class="form-control"  required="required"/>
            @Html.ValidationMessageFor(model => model.edad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.sexo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
          @*  @Html.EditorFor(model => model.sexo, new { htmlAttributes = new { @class = "form-control" } }) *@
            <select name="sexo" required >
                <option selected disabled value="">Elegir...</option>
                <option value="1">Masculino</option>
                <option value="2">Femenino</option>
            </select>
            @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index", "Home")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
